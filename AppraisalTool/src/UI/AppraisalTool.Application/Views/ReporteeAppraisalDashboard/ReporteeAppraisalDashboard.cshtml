@model AppraisalTool.App.Models.ReporteeAppraisal.ReporteeAppraisalDashboard



@{
    ViewData["Title"] = "ReporteeAppraisalDashboard";
}
<style>
    a:link {
        color: green;
        background-color: transparent;
        text-decoration: none;
    }

    a:visited {
        color: pink;
        background-color: transparent;
        text-decoration: none;
    }

    a:hover {
        color: red;
        background-color: transparent;
        text-decoration: underline;
    }

    a:active {
        color: yellow;
        background-color: transparent;
        text-decoration: underline;
    }

</style>



<div class="content-wrapper">
    <div style="  background-color: white;border-radius: 0.5rem;" class="container">

        <h4><a asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>    /<a asp-controller="AppraisalHomePage" asp-action="HomePageAppraisal"> Home</a>    /<a asp-controller="ReporteeAppraisalDashboard" asp-action="ReporteeAppraisalDashboard"> Reportee Appraisal Dashboard   </a></h4>

        <div>
            <h3>Reportee Appraisal Dashboard</h3>
        </div>

        <br />
        <div class=" row pt-2 mb-4  pb-2 p-2">


            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">Primary Role</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.appraisalStatus">
                            <option class=" text-dropdown">-Select- </option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">Start Date</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.startDate">
                            <option class=" text-dropdown">-Select-</option>
                        </select>
                    </div>
                </div>

            </div>


            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">End Date</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.endDate">
                            <option class=" text-dropdown">-Select-</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">Employee Name</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.employeeName">
                            <option class=" text-dropdown">-Select-</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">Reviewing Authority</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.reviewingAuthority">
                            <option class=" text-dropdown">-Select-</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="col-md-2">
                <div class="row">
                    <p style="padding-top:30px">Status</p>
                    <div class="Dropdown">

                        <select class="form-control" asp-items="ViewBag.appraisalStatus">
                            <option class=" text-dropdown">-Select-</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>




        @if (ViewBag.UserList != null)
        {
            @foreach (var item in ViewBag.UserList)
            {



                <div class=" row pt-2 mb-4  pb-2 p-2" role="alert" style=" width:100%; margin-left:5px ;border: 1px solid #E0144C; border-radius: 0.3rem;">
                    <div class="col-md-3">

                        <div class="row">
                            <div class="col-md-2 Date-Badge">
                                <label style="font-size:1rem ;" class="badge badge-pill  user-roles LoginBtn " for=""><i class="mdi mdi-calendar-blank"></i></label>
                            </div>
                            <div class="col-md-10">
                                <div class="row d-flex row date-p">
                                    <span style="display: inline-block;">Date</span>

                                    <small asp-for="Date">@item.startDate - @item.endDate </small>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">

                        <div class="row">
                            <div class="col-md-2 Date-Badge">
                                <label style="font-size:1rem ;" class="badge badge-pill user-roles  LoginBtn" for=""><i class=" mdi mdi-account-check"></i></label>
                            </div>
                            <div class="col-md-10">
                                <div class="row d-flex row date-p">
                                    <span style="display: inline-block;">Employee Name</span>

                                    <small asp-for="EmployeeName">@item.firstName  @item.lastName </small>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">

                        <div class="row">
                            <div class="col-md-2 Date-Badge">
                                <label style="font-size:1rem ;" class="badge badge-pill user-roles  LoginBtn" for=""><i class=" mdi mdi-account"></i></label>
                            </div>
                            <div class="col-md-10">
                                <div class="row d-flex row date-p">
                                    <span style="display: inline-block;">Reviewing Authority</span>

                                    <small asp-for="ReviewingAuthority">@item.revaName </small>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">

                        <div class="row">
                            <div class="col-md-10 row date-p">
                                <small style="border-radius: 0.5rem; font-size:13px ; background-color: rgb(245, 177, 138);" class="pt-1 pb-1"><asp-for ="AppraisalStatus">AppraisalStatus</small>

                                <div class="row d-flex justify-content-center">
                                    <span style="display: inline-block;">@item.appraisalStatus</span>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
