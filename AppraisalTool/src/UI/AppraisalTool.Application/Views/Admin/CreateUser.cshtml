@model AppraisalTool.App.Models.UserViewModel

@{
    //ViewData["Title"] = "AppraisalTool";
}



<style>
    .small{
        font-size : 14px;
    }
</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create User</h4>
                <form class="form-sample" asp-action="CreateUser">
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-4 col-form-label">Email Address<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Enter Email Address" />
                                    <span asp-validation-for="Email" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Password" class="col-sm-4 col-form-label">Password<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password"/>
                                    <span asp-validation-for="Password" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="JoinDate" class="col-sm-4 col-form-label">Joining Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="JoinDate" type="date" class="form-control" id="date_picker" />
                                    <span asp-validation-for="JoinDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                           @* <div class="form-group row">
                                <label asp-for="LastAppraisalDate" class="col-sm-4 col-form-label">Last Appraisal Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="LastAppraisalDate" type="date" class="form-control" />
                                    <span asp-validation-for="LastAppraisalDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>*@
                            <div class="form-group row">
                                <label asp-for="RoleId" class="col-sm-4 col-form-label">Role<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <select asp-for="RoleId" class="form-control" asp-items="@ViewBag.Rolelist">
                                        <option value="">Select Role</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchId" class="col-sm-4 col-form-label">Branch<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <select asp-for="BranchId" class="form-control" asp-items="@ViewBag.branchlist">
                                        <option value="">Select Branch</option>
                                    </select>
                                    <span asp-validation-for="BranchId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="PrimaryRole" class="col-sm-4 col-form-label">Primary Job Profile<span style="color: Red">&nbsp;*</span></label></label>
                                <div class="col-sm-8">
                                    <select asp-for="PrimaryRole" class="form-control" asp-items="@ViewBag.JobProfileRolelist">
                                        <option value="">Select Primary Job Profile</option>
                                    </select>
                                    <span asp-validation-for="PrimaryRole" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                           <div class="form-group row">
                                <label asp-for="SecondaryRole" class="col-sm-4 col-form-label">
                                    Secondary Job Profile<span style="color: Red">&nbsp;*</span></label>
                                
                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="SecondaryRole" asp-items="@ViewBag.JobProfileRolelist" class="form-control">
                                        <option value="">Select Secondary Job Profile</option>
                                    </select>
                                    <span asp-validation-for="SecondaryRole" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                             <div class="form-group row">
                                <label asp-for="RepaId" class="col-sm-4 col-form-label">
                                    Reporting Authority<span style="color: Red">&nbsp;*</span></label>
                                
                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="RepaId" asp-items="@ViewBag.ReportingList" class="form-control">
                                        <option value="">Select Reporting Authority </option>
                                    </select>
                                    <span asp-validation-for="RepaId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                           <div class="form-group row">
                                <label asp-for="RevaId" class="col-sm-4 col-form-label">
                                    Reviewing Authority<span style="color: Red">&nbsp;*</span></label>
                                
                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="RevaId" asp-items="@ViewBag.ReviewingList" class="form-control">
                                        <option value="">Select Reviewing Authority</option>
                                    </select>
                                    <span asp-validation-for="RevaId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                         
                    </div>
                    

                    <div class="row d-flex justify-content-center">
                        <div style="max-width:20%;">
                            <div style="align-items:center;">
                                <input type="submit" value="Save" class="btn btn-block @*LoginBtn*@ blueTheme btn-md font-weight-medium auth-form-btn" />
                              

                           </div>
                           
                        </div>
                         <div style="max-width:20%;">
                        <div style="align-items:center;">
                                <a asp-action="ListUsers" class="btn btn-outline-secondary btn-block btn-md font-weight-medium auth-form-btn">Cancel</a>
                        </div>
                       </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script language="javascript">
        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var mm = String(today.getMonth() + 1).padStart(2, '0');
        var yyyy = today.getFullYear();

        today = yyyy + '-' + mm + '-' + dd;
        $('#date_picker').attr('min',today);
    </script>
