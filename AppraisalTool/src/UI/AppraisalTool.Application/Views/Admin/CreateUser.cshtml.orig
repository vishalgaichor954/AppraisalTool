@model AppraisalTool.App.Models.UserViewModel

@{
    //ViewData["Title"] = "AppraisalTool";
}



<style>
    .small{
        font-size : 14px;
    }
</style>
<div class="content-wrapper main-panel content-wrapper-red">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ListUsers" style=" text-decoration: none;">User Management</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Create User</li>
        </ol>
    </nav>

    <div class="col-11">
        <div  style="width:100%; background-color: white;border-radius: 0.5rem;" class="card p-4">
            <div class="card-body">
                <h4 class="card-title">Create User</h4>
                <form class="form-sample needs-validation" asp-action="CreateUser" id="myForm" novalidate>
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name" pattern="[a-zA-z]{2,10}" title="First Name Should Contain only Alphabet" required />
                                    <br />

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name" pattern="[a-zA-z]{2,10}" title="Last Name Should Contain only Alphabet" required />
                                    <br />

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-4 col-form-label">Email Address<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Enter Email Address" title="Please Enter Valid Email"  pattern="^[0-9a-zA-z]+[.+-_$]{0,1}[0-9a-zA-z]+[@@][a-zA-z]+[.][a-zA-z]{2,3}$" required />
                                    <br />
                                    <span asp-validation-for="Email" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Password" class="col-sm-4 col-form-label">Password<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,32}$" required />
                                    <br />
                                    <span asp-validation-for="Password" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="JoinDate" class="col-sm-4 col-form-label">Joining Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="JoinDate" type="date" class="form-control" id="date_picker" required />
                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group row">
                                <label asp-for="RoleId" class="col-sm-4 col-form-label">Role<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <select asp-for="RoleId" class="form-control p-3 form-select" asp-items="@ViewBag.Rolelist"  required>
                                        <option value="">Select Role</option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchId" class="col-sm-4 col-form-label">Branch<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <select asp-for="BranchId" class="form-control p-3 form-select" asp-items="@ViewBag.branchlist"  required>
                                        <option value="">Select Branch</option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="PrimaryRole" class="col-sm-4 col-form-label">Primary Job Profile<span style="color: Red">&nbsp;*</span></label></label>
                                <div class="col-sm-8">
                                    <select asp-for="PrimaryRole" class="form-control p-3 form-select" asp-items="@ViewBag.JobProfileRolelist"  required>
                                        <option value="">Select Primary Job Profile</option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="SecondaryRole" class="col-sm-4 col-form-label">
                                    Secondary Job Profile<span style="color: Red">&nbsp;*</span>
                                </label>

                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="SecondaryRole" asp-items="@ViewBag.JobProfileRolelist" class="form-control p-3 form-select"  required>
                                        <option value="">Select Secondary Job Profile</option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="RepaId" class="col-sm-4 col-form-label">
                                    Reporting Authority<span style="color: Red">&nbsp;*</span>
                                </label>

                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="RepaId" asp-items="@ViewBag.ReportingList" class="form-control" required>
                                        <option value="">Select Reporting Authority </option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>*@
                    </div>
                  @*  <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="RevaId" class="col-sm-4 col-form-label">
                                    Reviewing Authority<span style="color: Red">&nbsp;*</span>
                                </label>

                                <div asp-for="SecondaryRole" class="col-sm-8">
                                    <select asp-for="RevaId" asp-items="@ViewBag.ReviewingList" class="form-control" required>
                                        <option value="">Select Reviewing Authority</option>
                                    </select>
                                    <br />
                                </div>
                            </div>
                        </div>

                    </div>*@

                    <div class="form-group text-center">
                        @* <input type="hidden" name="job" id="job" />*@
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-2"> <input type="submit" style="width:130px" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>

                            <div class="col-2">  <a asp-action="ListUsers" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                            <div class="col-4"></div>
                            @* <input id="submit" type="submit" value="submit" class="btn btn-primary mt-4" />
                            <input type="reset" value="reset" class="btn btn-danger mt-4" />*@
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/js/DropdownValidator.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script language="javascript">
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0');
    var yyyy = today.getFullYear();

    today = yyyy + '-' + mm + '-' + dd;
    $('#date_picker').attr('min', today);
</script>





