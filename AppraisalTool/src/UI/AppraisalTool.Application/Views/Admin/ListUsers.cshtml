    <div style="width:100%; background-color: white;border-radius: 0.5rem;" class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
                                <h3 class="page-title" style="margin-left:3%;"> Users </h3>
                                <nav aria-label="breadcrumb" style="margin-right:2%;">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block @*LoginBtn*@  blueTheme btn-md font-weight-medium auth-form-btn" asp-action="CreateUser">Create User</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="myTable" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th class="text-center"> Name </th>
                                            <th class="text-center"> Branch </th>
                                            <th class="text-center"> Role </th>
                                            <th class="text-center"> Join Date </th>
                                            <th class="text-center"> Primary Profile </th>
                                            <th class="text-center"> Secondary Profile </th>
                                            <th class="text-center"> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.UserList != null)
                                        {
                                            @foreach (var item in ViewBag.UserList)
                                            {
                                                <tr>
                                                    <td class="text-center" style="text-transform:'Capatilize';"> @item.firstName @item.lastName </td>
                                                    <td class="text-center"> @item.branchName </td>
                                                    <td class="text-center"> @item.roleName </td>
                                                    <td class="text-center"> @item.joinDate </td>
                                                    <td class="text-center"> @item.primaryJobProfileName </td>
                                                    <td class="text-center"> @item.secondaryJobProfileName </td>
                                                    <td class="text-center">
                                                        <a asp-action="UpdateUser" asp-route-id="@item.id" class="btn btn-sm btn-outline-info"><i class="mdi mdi-table-edit"></i></a>
                                                        <a asp-action="DeleteUser" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger" onclick="loadDelete()"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
