<div class="container">
    <h6 class="BreadCrump"><a asp-controller="Admin" asp-action="ConfigureSetting">Configure Settings</a>  /<a asp-controller="Admin" asp-action="ListUsers">  User Management </a></h6>




    <div class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="width:80% ; margin-left:50px">
                        <div class="card-body">
                            <div class="page-header">
                                <h3 class="page-title"> Appraisal List </h3>

                            </div>
                            <form method="post" asp-action="ListAppraisals">

                                <div style="overflow:scroll;">

                                    <table class="table table-bordered display" id="myTable" style="width:80% ">
                                        <thead>
                                            <tr>
                                                <th width="100px"> Appraisal Id </th>
                                                <th> Name </th>
                                                <th width="100px"> Appraisal Cycle </th>
                                                <th width="100px">Allow Edits</th>


                                            </tr>
                                           
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Appraisals != null)
                                            {
                                                @foreach (var item in ViewBag.Appraisals)
                                                {
                                                    <tr>
                                                        <td> @item.appraisalId </td>
                                                        <td style="text-transform:Capatilize"> @item.firstname @item.lastName </td>

                                                        <td> @item.startYear @item.endYear </td>
                                                        <td>
                                                            <label class="switch">
                                                                <input type="checkbox" name="allowEdit" value="true">

                                                            </label>
                                                        </td>
                                                        <td> @item.primaryJobProfileName </td>
                                                        <td> @item.secondaryJobProfileName </td>

                                                    </tr>
                                                      
                                                }
                                                
                                               

                                            }
                                          

                                        </tbody>
                                    </table>
                                     
                                </div>
                              <div class="allow" style="max-width:15%; margin-left:700px; ">
                            <input type="submit" value="Allow" style="padding: 16px 32px;margin: 4px 2px;" />                                                  

                             </div>
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

