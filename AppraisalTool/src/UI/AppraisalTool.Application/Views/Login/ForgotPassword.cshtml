@model AppraisalTool.App.Models.AppraisalToolAuth.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["PassReset"] != null)
{
    <div class="container">
        <div class="alert alert-success mt-5" role="alert">
            <strong>Success !</strong> @TempData["PassReset"]
        </div>
    </div>
}
<div class="container-scroller containerBackGroundColor">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo logoImgLogin">
                            <img src="~/lib/assets/images/AppraisalToolLogo_adobe_express.svg">
                        </div>
                        <h4>Reset Password</h4>
                        <h6 class="font-weight-light"></h6>
                        <div class=" mt-3 alert alert-success">
                            <p>
                                Enter your email For resetting your password
                            </p>
                        </div>
                        <form class="pt-3" asp-controller="Login" asp-action="ForgotPassword">
                            <div class="form-group">
                                <label asp-for="email" class="control-label">Email</label>
                                <input asp-for="email" type="email" class="form-control form-control-lg" placeholder="Email">
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div style="align-items:center ;">
                                    <input type="submit" value="Submit" class="btn btn-block LoginBtn btn-lg font-weight-medium auth-form-btn" />

                                </div>
                            </div>


                            @* <div class=" mt-3 alert alert-success">
                            <p>
                            check email for new credential and Login
                            </p>
                            </div>*@
                        </form>
                        @*           <button asp-action="Login" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Login</button>*@
                       <div class="container text-center">
                            <a asp-action="Login" class="btn btn-outline-danger"> Back to Login  </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="../../assets/js/off-canvas.js"></script>
<script src="../../assets/js/hoverable-collapse.js"></script>
<script src="../../assets/js/misc.js"></script>
<!-- endinject -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
