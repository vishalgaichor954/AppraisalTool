<head>
    <style>
        .BreadCrump > a:link {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }


        .BreadCrump > a:visited {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:hover {
            color: black;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:active {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }
    </style>
</head>
<div class="container">
    @*<h6 class="BreadCrump"><a asp-controller="Admin" asp-action="ConfigureSetting">Configure Settings</a>  /<a asp-controller="FinancialYear" asp-action="ListFinancialYear">Financial Year Management </a></h6>*@

 <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting"  style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Job Role Management</li>
        </ol>
    </nav>

    <div class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
@*                                <h3 class="page-title"> Menu </h3>*@  
                              <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" asp-action="AddjobRole">Add New JobRole</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="table" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th> Name </th>
                                            <th> End Year </th>
                                            <th> Start Date</th>
                                            <th> End Date </th>
                                            <th>Active Status</th>
                                             <th> Controller Name</th>
                                            <th> Action Name </th>
                                            <th> Link Name </th>
                                            <th> Role </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.JobProfileRole != null)
                                        {
                                            @foreach (var item in ViewBag.JobProfileRole)
                                            {
                                                <tr>
                                                    <td> @item.name </td>
                                                    <td> </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                   <td>  </td>
                                                   <td>  </td>
                                                     <td>  </td>
                                                    <td>  </td>
                                                    <td>
                                                        <a asp-action="UpdateJobRole" asp-route-id="@item.id" class="btn btn-sm blueTheme"><i class="mdi mdi-table-edit"></i></a>
                                                        <a asp-action="DeleteJobRole" asp-route-id="@item.id" class="btn btn-sm LoginBtn" onclick="loadDelete()"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

