<head>
    <style>
        .BreadCrump > a:link {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }


        .BreadCrump > a:visited {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:hover {
            color: black;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:active {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }
    </style>
</head>
<div class="content-wrapper main-panel content-wrapper-red">
    @*<h6 class="BreadCrump"><a asp-controller="Admin" asp-action="ConfigureSetting">Configure Settings</a>  /<a asp-controller="FinancialYear" asp-action="ListFinancialYear">Financial Year Management </a></h6>*@

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Branch Management</li>
        </ol>
    </nav>

    <div style="width:100%; background-color: white;border-radius: 0.5rem;" class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
                               <h3 class="page-title" style="margin-left:3%;">Branches</h3>
                                <nav aria-label="breadcrumb" style="margin-right:2%;">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" asp-action="AddBranch">Create Branch</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="table" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th class="text-center"> Branch Code </th>
                                            <th class="text-center"> Branch </th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.BranchList != null)
                                        {
                                            @foreach (var item in ViewBag.BranchList)
                                            {
                                                <tr>
                                                    <td class="text-center"> @item.BranchCode </td>
                                                    <td class="text-center"> @item.BranchName</td>
                                                    <td class="text-center">
                                                        <a asp-action="UpdateBranch" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="mdi mdi-table-edit"></i></a>
                                                        <a asp-action="DeleteBranch" asp-route-id="@item.Id" class="btn btn-sm   btn-outline-danger" onclick="loadDelete()" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                    <td> @item.BranchName</td>
                                                    <td> @item.BranchName</td>
                                                    <td>@item.BranchName</td>
                                                     
                                                    <td> @item.BranchName</td>
                                                    <td> @item.BranchName</td>
                                                    <td>@item.BranchName </td>
                                                    <td>@item.BranchName</td>

                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

