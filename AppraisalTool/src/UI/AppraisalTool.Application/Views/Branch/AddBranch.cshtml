
@model AppraisalTool.App.Models.Branches.BranchVm
@{
    ViewData["Title"] = "AddBranch";
}






<style>
    .small{
        font-size : 14px;
    }
   
</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                
                <form class="form-sample" asp-action="AddBranch">
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                   
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchCode" class="col-sm-4 col-form-label">Branch Code<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="BranchCode" type="text"  class="form-control" />
                                    <span asp-validation-for="BranchCode" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchName" class="col-sm-4 col-form-label">Branch Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="BranchName" type="text"  class="form-control" />
                                    <span asp-validation-for="BranchName" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                     <div class="form-group text-center">
                          
                            <div class="row">
                                <div class="col-4"></div>
                                <div class="col-2">  <a asp-action="ListBranches" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                                <div class="col-2"> <input type="submit" style="width:130px" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>
                                <div class="col-4"></div>
                             
                            </div>

                        </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    


