@model AppraisalTool.App.Models.Branches.BranchVm
@{
    //ViewData["Title"] = "AddBranch";
}


<div class="loader" style="display:none;">
    <div class="d-flex justify-content-center align-items-center" style="height:100vh ;">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        </div>
    </div>
</div>






<style>
    .small{
        font-size : 14px;
    }

</style>
<div class="content-wrapper main-panel content-wrapper-red">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Branch" class="active" asp-action="ListBranches" style=" text-decoration: none;">Branch Management</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Create Branch</li>
        </ol>
    </nav>

    <div class="col-11">
        <div style="width:100%; background-color: white;border-radius: 0.5rem;" class="card p-4">
            <div class="card-body">
                <h4 class="card-title">Add Branch</h4>
                <form class="form-sample  needs-validation" asp-action="AddBranch" id="myForm" novalidate>
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchCode" class="col-sm-4 col-form-label">Branch Code<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="BranchCode" type="text" class="form-control" pattern="['BR0']{3}[0-9]{3}" required  maxlength="6" placeholder="BR0023"/>
                                    <span asp-validation-for="BranchCode" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="BranchName" class="col-sm-4 col-form-label">Branch<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="BranchName" type="text" class="form-control" required />
                                    @*<span asp-validation-for="BranchName" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">

                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-2"> <input type="submit" style="width:130px" id="buttonID" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>

                            <div class="col-2">  <a asp-action="ListBranches" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                            <div class="col-4"></div>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
