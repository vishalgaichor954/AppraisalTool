@{
    ViewData["Title"] = "Dashboard";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-home"></i>
                </span> Dashboard
            </h3>
           @* <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                    </li>
                </ul>
            </nav>*@
        </div>
        <!-- <div  style="margin-left:200px ;" class="container1"> -->
        <div class="row ">
            <div class="col-md-4 role-div">
                    <h3 style="color: grey; font-family: sans-serif;margin-left: 20px;" class="mt-5 ">My Role</h3>
                    
                    @{
                        if (Model.PrimaryRole!=null && Model.PrimaryRole!="")
                        {
                             <ul>
                    
                        <div class=" mt-3">
                           
                               <label class="badge badge-pill badge-primary user-roles" for="">1</label>
                               <li class="roles">@Model.PrimaryRole</li>
                         
                      </div> 
                   
                    
                        <div class=" mt-3">
                            
                                 <label class="badge badge-pill badge-gradient-info user-roles" for="">2</label>
                                  <li class="roles">@Model.SecondaryRole</li>
                                 
                              
                    </div>
                       
                    @{
                        int temp = 2;
                        for (int i = 0; i < Model.Roles.Count(); i++)
                        {
                            temp = temp + int.Parse("1");
                    <div class=" mt-3">
                        <label class="badge badge-pill badge-gradient-danger user-roles" for=""> @temp</label>
                        <li class="roles">@Model.Roles.ElementAt(i)</li>
                    </div>

                        }

                    }
            </ul>
                        }
                    }
                   

        

    </div>
 


        <div class="col-md-8">
            <div class="row justify-content-center">
                <!-- <div class="col-md-1"></div> -->
                    @{
                        foreach (var item in ViewBag.GetMenuCards)
                        { 
                            if(item.menuList.menuFlag=="DASHBOARD"){
                        <div class="col-md-6 stretch-card grid-margin Dash-Card">
                            <a asp-controller="@item.menuList.menuController" asp-action="@item.menuList.menuAction" class="Anchor-body">
                                <div class="card @item.menuList.menuClass card-img-holder text-white Dash-Card">
                                    <div class="card-body">
                                        <img src="~/lib/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                                        <h4 class="font-weight-normal mb-3">
                                                @item.menuList.menuText <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                                        </h4>
                                        <i class=" @item.menuList.menuIcon"></i>

                                        <!-- <h2 class="mb-5">$ 15,0000</h2>
                                        <h6 class="card-text">Increased by 60%</h6> -->
                                    </div>
                                </div>
                            </a>
                        </div>

                        }
                        }
                    }


            </div>
        </div>
    </div>
        </div>
