<div class="content-wrapper main-panel content-wrapper-red">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" class="active" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Appraisal</li>
        </ol>
    </nav>

    <div style="height:100vh ;width:100%; background-color: white;border-radius: 0.5rem;" class="container">

        <!-- <h2 >Appraisal Home</h2> -->
        <div>
            <h2 style="padding-top:30px;padding-left: 20px;">Appraisal</h2>
        </div>
        <div>
            @{
                string fid = "";
                string fyear = "";
                <p style="padding-top:30px" class="mx-1">FY Selection</p>
                <h1>@fid @fyear</h1>
                <div class="Dropdown">

                    <select asp-for="StartYear" id="FincaialYear" class="form-control form-select FincaialYear color-black" asp-items="@ViewBag.financialYearList">
                    </select>


                </div>
            }
            <div class="mt-5 col-xs-4">

                <div class="appraisal-dash-card">
                    <!-- <div class="col-md-1"></div> -->
                    @foreach (var item in ViewBag.GetMenuCards)
                    {
                        if (item.menuList.menuFlag == "SelfAppraisal")
                        {
                            <div class="dash-card">
                                <a id="SelfAppraisal" class="Anchor-body">

                                    <div class="@item.menuList.menuClass card-img-holder text-white card-menu">
                                        <div class="card-body appraisal-card">
                                            <img src="../../assets/images/dashboard/circle.svg" class="card-img-absolute" alt="" />
                                            <h2 class="font-weight-normal pt-2">

                                                @item.menuList.menuText<br />@item.menuList.menuIcon
                                            </h2>
                                            <h6>Total appraisal to be filled</h6>
                                            <p>@ViewBag.AppraisalsToBeFilled</p>
                                            <h6>Pending Appraisals</h6>
                                            <p>@ViewBag.PendingAppraisals </p>


                                            <div style="text-align:end ;" class="Last-Date">
                                                <h6>Last date</h6>
                                                <h4>@ViewBag.LastDate </h4>
                                            </div>


                                        </div>
                                    </div>
                                </a>
                            </div>

                        }
                    }




                    @foreach (var item in ViewBag.GetMenuCards)
                    {
                        if (item.menuList.menuFlag == "ReporteeAppraisal")
                        {
                            <div class="dash-card">
                                <a asp-controller="@item.menuList.menuController" asp-action="@item.menuList.menuAction" class="Anchor-body">
                                    <div class="@item.menuList.menuClass card-img-holder text-white card-menu">
                                        <div class="card-body appraisal-card">
                                            <img src="../../assets/images/dashboard/circle.svg" class="card-img-absolute" alt="" />
                                            <h2 class="font-weight-normal pt-2">
                                                @item.menuList.menuText<br />@item.menuList.menuIcon
                                            </h2>
                                            <h6>Total appraisal filled</h6>
                                            <p>@ViewBag.ReporteeCompleted</p>
                                            <h6>Pending Appraisals</h6>
                                            <p>@ViewBag.PendingAtReportee </p>


                                            <div style="text-align:end ;" class="Last-Date">
                                                <h6>Last date</h6>
                                                <h4>@ViewBag.LastDate </h4>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }



                    @foreach (var item in ViewBag.GetMenuCards)
                    {
                        if (item.menuList.menuFlag == "ReviewAppraisal")
                        {
                            <div class="dash-card">
                                <a asp-controller="@item.menuList.menuController" asp-action="@item.menuList.menuAction" class="Anchor-body">

                                    <div class="@item.menuList.menuClass card-img-holder text-white card-menu">
                                        <div class="card-body appraisal-card">
                                            <img src="../../assets/images/dashboard/circle.svg" class="card-img-absolute" alt="" />
                                            <h2 class="font-weight-normal pt-2">

                                                @item.menuList.menuText<br />@item.menuList.menuIcon
                                            </h2>
                                            <h6>Total appraisal to be filled</h6>
                                            <p>@ViewBag.AppraisalsToBeFilled</p>
                                            <h6>Pending Appraisals</h6>
                                            <p>@ViewBag.PendingAtReview </p>


                                            <div style="text-align:end ;" class="Last-Date">
                                                <h6>Last date</h6>
                                                <h4>@ViewBag.LastDate </h4>
                                            </div>


                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }


                </div>
            </div>


        </div>

        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
