        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3em;
    }

    .text-dropdown {
        font-weight: bolder;
        text-size: 0.9em;
    }

    a:link {
        background-color: transparent;
        text-decoration: none;
    }

    .BreadCrump > a:visited {
        color: grey;
        background-color: transparent;
        text-decoration: none;
    }

    .BreadCrump > a:hover {
        color: black;
        background-color: transparent;
        text-decoration: underline;
    }

    .BreadCrump > a:active {
        color: yellow;
        background-color: transparent;
        text-decoration: underline;
    }
</style>

