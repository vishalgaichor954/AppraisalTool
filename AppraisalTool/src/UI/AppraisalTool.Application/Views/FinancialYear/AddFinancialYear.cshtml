<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Year</h4>
                <form class="form-sample" asp-action="AddFinancialYear">
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="StartYear" class="col-sm-4 col-form-label">Start Year<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="StartYear" type="text" class="form-control" placeholder="2021" />
                                    <span asp-validation-for="StartYear" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="EndYear" class="col-sm-4 col-form-label">End Year<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="EndYear" type="text" class="form-control" placeholder="2022" />
                                    <span asp-validation-for="EndYear" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="StartDate" class="col-sm-4 col-form-label">Start Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="StartDate" type="text" class="form-control" placeholder="1st April" />
                                    <span asp-validation-for="StartDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-4 col-form-label">End Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="EndDate" type="text" class="form-control" placeholder="31st April" />
                                    <span asp-validation-for="EndDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                   <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="IsActive" class="col-sm-4 col-form-label">Active Status@*<sup class="required">*</sup>*@</label>
                                <div class="col-sm-8">
@*                                    <input asp-for="IsActive" type="hidden" name="status" value="0" />
*@                                    <input asp-for="IsActive" type="checkbox" value="True" name="status" class="form-check-input"/>    
                                    <span asp-validation-for="IsActive" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                       
                    </div>
                     <div class="form-group text-center">
                           @* <input type="hidden" name="job" id="job" />*@
                            <div class="row">
                                <div class="col-4"></div>
                                <div class="col-2">  <a asp-action="ListFinancialYear" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                                <div class="col-2"> <input type="submit" style="width:130px" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>
                                <div class="col-4"></div>
                                @* <input id="submit" type="submit" value="submit" class="btn btn-primary mt-4" />
                            <input type="reset" value="reset" class="btn btn-danger mt-4" />*@
                            </div>

                        </div>
                </form>
            </div>
        </div>
    </div>

</div>

