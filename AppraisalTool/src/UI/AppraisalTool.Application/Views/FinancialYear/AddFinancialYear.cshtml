@model AppraisalTool.App.Models.FinancialYear.FinancialYear

@{
    //ViewData["Title"] = "AppraisalTool";
}


<div class="loader" style="display:none;">
    <div class="d-flex justify-content-center align-items-center" style="height:100vh ;">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        </div>
    </div>
</div>



<style>
    .small{
        font-size : 14px;
    }

</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Year</h4>
                <form class="form-sample needs-validation" asp-action="AddFinancialYear"  id="myForm" novalidate>
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="StartDate" class="col-sm-4 col-form-label">Start Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input onblur="xyz()" asp-for="StartDate" type="date" id="to" asp-format="{0:dd/MM/yyyy}" class="form-control" required />

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-4 col-form-label">End Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="EndDate" type="date" id="from" class="form-control" readonly />

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="IsActive" class="col-sm-4 col-form-label">Active Status@*<sup class="required">*</sup>*@</label>
                                <div class="col-sm-8">
                                    <input asp-for="IsActive" type="checkbox" value="True" name="status" class="form-check-input" />

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group text-center">
                        @* <input type="hidden" name="job" id="job" />*@
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-2"> <input type="submit" style="width:130px" value="Save" id="buttonID" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>

                            <div class="col-2">  <a asp-action="ListFinancialYear" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                            <div class="col-4"></div>
                            @* <input id="submit" type="submit" value="submit" class="btn btn-primary mt-4" />
                            <input type="reset" value="reset" class="btn btn-danger mt-4" />*@
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script>
    function xyz() {
        var el_up = document.getElementById("to").value;
        console.log(el_up);
        d1 = new Date(el_up);
        var year1 = d1.getFullYear();
        console.log(year1);
        var month = d1.getMonth();
        console.log(month);
        var day = d1.getDate();
        console.log(day);
        var c = new Date(year1 + 1, month, day).toISOString().split('T')[0];
        console.log(c);
        document.getElementById('from').value = c;



    }
</script>


