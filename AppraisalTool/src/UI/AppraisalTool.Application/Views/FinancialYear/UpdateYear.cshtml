<style>
    .small{
        font-size : 14px;
    }
</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Financial Year</h4>
                <form class="form-sample" asp-action="UpdateYear">
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                             <input asp-for="Id" type="hidden" />
                            <div class="form-group row">
                                <label asp-for="StartYear" class="col-sm-4 col-form-label">StartYear<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="StartYear" type="text" class="form-control" placeholder="2021" />
                                    <span asp-validation-for="StartYear" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="EndYear" class="col-sm-4 col-form-label">End Year<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="EndYear" type="text" class="form-control" placeholder="2022" />
                                    <span asp-validation-for="EndYear" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="StartDate" class="col-sm-4 col-form-label">Start Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="StartDate" type="text" class="form-control" placeholder="1st April" />
                                    <span asp-validation-for="StartDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-4 col-form-label">End Date<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="EndDate" type="text" class="form-control" placeholder="31st April" />
                                    <span asp-validation-for="EndDate" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                   

                    <div class="row d-flex justify-content-center">
                        <div style="max-width:20%;">
                            <div style="align-items:center;">
                                <input type="submit" value="Save" class="btn btn-block @*LoginBtn*@ blueTheme btn-md font-weight-medium auth-form-btn" />
                              

                           </div>
                           
                        </div>
                         <div style="max-width:20%;">
                        <div style="align-items:center;">
                                <a asp-action="ListFinancialYear" class="btn btn-outline-secondary btn-block btn-md font-weight-medium auth-form-btn">Cancel</a>
                        </div>
                       </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script language="javascript">
        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var mm = String(today.getMonth() + 1).padStart(2, '0');
        var yyyy = today.getFullYear();

        today = yyyy + '-' + mm + '-' + dd;
        $('#date_picker').attr('min',today);
    </script>
