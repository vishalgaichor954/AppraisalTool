<head>
    <style>
        .BreadCrump > a:link {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }


        .BreadCrump > a:visited {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:hover {
            color: black;
            background-color: transparent;
            text-decoration: none;
        }

        .BreadCrump > a:active {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }
    </style>
</head>
<div class="container">
    @*<h6 class="BreadCrump"><a asp-controller="Admin" asp-action="ConfigureSetting">Configure Settings</a>  /<a asp-controller="FinancialYear" asp-action="ListFinancialYear">Financial Year Management </a></h6>*@

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Finanacial Year Management</li>
        </ol>
    </nav>

    <div class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
                                @*                                <h3 class="page-title"> Menu </h3>*@
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" asp-action="AddFinancialYear">Add New Year</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="table" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th> Start Year </th>
                                            <th> End Year </th>
                                            <th> Start Date</th>
                                            <th> End Date </th>
                                            <th>Active Status</th>
                                            <th> Controller Name</th>
                                            <th> Action Name </th>
                                            <th> Link Name </th>
                                            <th> Role </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.FinancialYearList != null)
                                        {
                                            @foreach (var item in ViewBag.FinancialYearList)
                                            {
                                                <tr>
                                                    <td> @item.startYear </td>
                                                    <td> @item.endYear </td>
                                                    <td> @item.startDate.ToString("dd MMMM")</td>
                                                    <td> @item.endDate.ToString("dd MMMM")</td>
                                                    <td>@item.isActive</td>
                                                    <td> @item.menuController </td>
                                                    <td> @item.menuAction </td>
                                                    <td> @item.menuLink </td>
                                                    <td> @item.roleName </td>
                                                    <td>
                                                        <a asp-action="UpdateYear" asp-route-id="@item.id" class="btn btn-sm btn-outline-info"><i class="mdi mdi-table-edit"></i></a>
                                                        <a asp-action="DeleteYear" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger" onclick="loadDelete()"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

