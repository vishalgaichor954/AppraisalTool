    <div class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
                                <h3 class="page-title"> Menu </h3>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" asp-action="CreateMenu">Create Menu</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                           <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="myTable" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th> Name </th>
                                            <th> Class Name </th>
                                            <th> Icon Name </th>
                                            <th> Flag Name </th>
                                           @* <th> Controller Name</th>
                                            <th> Action Name </th>*@
                                            <th> Link Name </th>  
                                             <th> Role </th> 
                                             <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.MenuList != null)
                                        {
                                            @foreach (var item in ViewBag.MenuList)
                                            {
                                                <tr>
                                                    <td> @item.menuText </td>
                                                    <td> @item.menuClass </td>
                                                    <td> @item.menuIcon </td>
                                                    <td> @item.menuFlag</td>
                                                 @*   <td> @item.menuController </td>
                                                     <td> @item.menuAction </td>*@
                                                     <td> @item.menuLink </td>
                                                     <td> @item.roleName </td>
                                                    <td> <a asp-action="UpdateMenu" asp-route-id="@item.menu_Id" class="btn btn-sm blueTheme"><i class="mdi mdi-table-edit"></i></a>
                                                     <a asp-action="DeleteMenu" asp-route-id="@item.menu_Id" class="btn btn-sm LoginBtn" onclick="loadDelete()"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                 </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
   
