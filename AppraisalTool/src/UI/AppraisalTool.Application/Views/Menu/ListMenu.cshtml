<div class="content-wrapper main-panel content-wrapper-red">
    @*<h6 class="BreadCrump"><a asp-controller="Admin" asp-action="ConfigureSetting">Configure Settings</a>  /<a asp-controller="Admin" asp-action="ListMenu">  Menu Management </a></h6>*@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Menu Management</li>
        </ol>
    </nav>

    <div style="width:100%; background-color: white;border-radius: 0.5rem;" class="container-scroller ">
        <!-- partial -->
        <div>
            <div class="row">
                <div class="col-lg-12 grid-margin">
                    <div class="card" style="max-width:95%">
                        <div class="card-body">
                            <div class="page-header">
                                <h2 class="page-title" style="margin-left:3%;"> Menu </h2>
                                <nav aria-label="breadcrumb" style="margin-right:2%;">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <div style="align-items:center;">
                                                <a class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" asp-action="CreateMenu">Create Menu</a>
                                            </div>
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <div style="overflow:scroll;">
                                <table class="table table-bordered display" id="myTable" style="max-width:95%">
                                    <thead>
                                        <tr>
                                            <th class="text-center"> Name </th>
                                            <th class="text-center"> Class Name </th>
                                            <th class="text-center"> Icon Name </th>
                                            <th class="text-center"> Model </th>
                                            @* <th> Controller Name</th>
                                            <th> Action Name </th>*@
                                            <th class="text-center"> Link </th>
                                            <th class="text-center"> Role </th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.MenuList != null)
                                        {
                                            @foreach (var item in ViewBag.MenuList)
                                            {
                                                <tr>
                                                    <td class="text-center"> @item.menuText</td>
                                                    <td > @item.menuClass </td>
                                                    <td> @item.menuIcon </td>
                                                    <td> @item.menuFlag</td>
                                                    @*   <td> @item.menuController </td>
                                            <td> @item.menuAction </td>*@
                                                    <td class="text-center"> @item.menuLink </td>
                                                    <td> @item.roleName </td>
                                                    <td class="text-center">
                                                        <a asp-action="UpdateMenu" asp-route-id="@item.menu_Id" class="btn btn-sm btn-outline-info"><i class="mdi mdi-table-edit"></i></a>
                                                        <a asp-action="DeleteMenu" asp-route-id="@item.menu_Id" class="btn btn-sm btn-outline-danger" onclick="loadDelete()"><i class="mdi mdi-delete"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

