@model AppraisalTool.App.Models.Menu.MenuModel

@{
    ViewData["Title"] = "Add Menu";
}
<style>
    .checkbox{
        disply:flex;
    }
</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Menu</h4>
                <form class="form-sample form-inline" asp-action="UpdateMenu" method="post">
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <input asp-for="Menu_Id" type="hidden" value="@ViewBag.Menu_Id" />
                            <div class="form-group row">
                                <label asp-for="MenuText" class="col-sm-4 col-form-label">Menu<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuText" type="text" class="form-control" placeholder="Enter Menu Text" />
                                    <span asp-validation-for="MenuText" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuClass" class="col-sm-4 col-form-label">Class Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuClass" type="text" class="form-control" placeholder="Enter Menu Class" />
                                    <span asp-validation-for="MenuClass" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuIcon" class="col-sm-4 col-form-label">Icon Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuIcon" type="text" class="form-control" placeholder="Enter Menu Icon" />
                                    <span asp-validation-for="MenuIcon" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuFlag" class="col-sm-4 col-form-label">Flag Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuFlag" type="text" class="form-control" placeholder="Enter Menu Flag" />
                                    <span asp-validation-for="MenuFlag" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuAction" class="col-sm-4 col-form-label">Action Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuAction" type="text" class="form-control" placeholder="Enter Menu Action" />
                                    <span asp-validation-for="MenuAction" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuController" class="col-sm-4 col-form-label">Controller Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuController" type="text" class="form-control" placeholder="Enter Menu Controller" />
                                    <span asp-validation-for="MenuController" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuLink" class="col-sm-4 col-form-label">Link Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuLink" type="text" class="form-control" placeholder="Enter Menu Link" />
                                    <span asp-validation-for="MenuLink" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        

                        </div>

                        <div>
                            <div class="form-group row">
                               <label class="col-sm-4 col-form-label">Role<sup class="required">*</sup></label>                  
                               <div class="form-check">
                                    @foreach (var item in ViewBag.Rolelist)
                                    {
                                        
                                        <input type="checkbox" value="@item.Value" name="selectedRoles" class="form-check-input">
                                        <label class="form-check-label">@item.Key</label>
                                       

                                    }
                                    

                                    
                                </div>
                            </div>
                        </div>

                        
                        
                  





                    <div class="row d-flex justify-content-center">
                        <div style="max-width:20%;">
                            <div style="align-items:center;">
                                <input type="submit" value="Save" class="btn btn-block LoginBtn btn-md font-weight-medium auth-form-btn" />


                            </div>

                        </div>
                        <div style="max-width:20%;">
                            <div style="align-items:center;">
                                <a asp-action="ListMenu" class="btn btn-outline-secondary btn-block btn-md font-weight-medium auth-form-btn">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
