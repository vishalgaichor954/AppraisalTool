@model AppraisalTool.App.Models.Menu.MenuModel

@{
    ViewData["Title"] = "Update Menu";
}
<div class="loader" style="display:none;">
    <div class="d-flex justify-content-center align-items-center" style="height:100vh ;">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        </div>
    </div>
</div>
<style>
    .checkbox {
        display: flex;
    }
</style>
<div class="container">

    <div class="col-11">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Menu</h4>
                <form class="form-sample form-inline needs-validation" asp-action="UpdateMenu" method="post" id="myForm" novalidate>
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <input asp-for="menu_Id" type="hidden" />
                            <div class="form-group row">
                                <label asp-for="MenuText" class="col-sm-4 col-form-label">Menu<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuText" type="text" class="form-control" placeholder="Enter Menu Text" required />
                                    @*<span asp-validation-for="MenuText" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuClass" class="col-sm-4 col-form-label">Class<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuClass" type="text" class="form-control" placeholder="Enter Menu Class" required />
                                    @*<span asp-validation-for="MenuClass" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuIcon" class="col-sm-4 col-form-label">Icon<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuIcon" type="text" class="form-control" placeholder="Enter Menu Icon" required />
                                    @*<span asp-validation-for="MenuIcon" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuFlag" class="col-sm-4 col-form-label">Model<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuFlag" type="text" class="form-control" placeholder="Enter Menu Flag" required>


                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuAction" class="col-sm-4 col-form-label">Action<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuAction" type="text" class="form-control" placeholder="Enter Menu Action" required />
                                    @*<span asp-validation-for="MenuAction" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuController" class="col-sm-4 col-form-label">Controller<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuController" type="text" class="form-control" placeholder="Enter Menu Controller" required />
                                    @*<span asp-validation-for="MenuController" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MenuLink" class="col-sm-4 col-form-label">Link<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="MenuLink" type="text" class="form-control" placeholder="Enter Menu Link" required />
                                    @*<span asp-validation-for="MenuLink" class="text-danger mx-1 small"></span>*@
                                </div>
                            </div>
                        </div>


                    </div>

                    <div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Role<sup class="required">*</sup></label>
                            <div class="form-check">

                                @foreach (var item in ViewBag.roldict)
                                {
                                    @foreach (var i in ViewBag.RoleList)
                                    {
                                        @if (item.Value == i.Value)
                                        {
                                            <input type="checkbox" value="@i.Value" name="selectedRoles" id="check" class="form-check-input changeChecker" checked>
                                            <label class="form-check-label">@i.Key</label>
                                        }



                                    }

                                }

                                @foreach (var item in ViewBag.RoleList)
                                {
                                    @foreach (var i in ViewBag.roldict)
                                    {
                                        @if (item.Value == i.Value)
                                        {
                                            ViewBag.RoleList.Remove(item.Key);
                                        }







                                    }

                                }


                                @foreach (var role in ViewBag.RoleList)
                                {

                                    <input type="checkbox" value="@role.Value" name="selectedRoles" id="check" class="form-check-input  changeChecker">
                                    <label class="form-check-label">@role.Key</label>




                                }




                                @*@foreach (var role in ViewBag.roledict3)
                                {

                                <input type="checkbox" value="@role.Value" name="selectedRoles" id="check" class="form-check-input  changeChecker ">
                                <label class="form-check-label">@role.Key</label>




                                }*@


                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        @* <input type="hidden" name="job" id="job" />*@
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-2"> <input type="submit" id="buttonID" style="width:130px" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>

                            <div class="col-2">  <a asp-action="ListMenu" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>
                            <div class="col-4"></div>
                            @* <input id="submit" type="submit" value="submit" class="btn btn-primary mt-4" />
                            <input type="reset" value="reset" class="btn btn-danger mt-4" />*@
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


