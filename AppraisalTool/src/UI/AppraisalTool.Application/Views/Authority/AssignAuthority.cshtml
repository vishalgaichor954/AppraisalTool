<style>
    .small {
        font-size: 14px;
    }
</style>


<div class="content-wrapper main-panel content-wrapper-red">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="border:none">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" class="active" asp-action="ConfigureSetting" style=" text-decoration: none;">Configure Settings</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Authority" class="active" asp-action="GetAllAuthority" style=" text-decoration: none;">Assign Authority</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Assign</li>
        </ol>
    </nav>

    <div class="col-11">
        <div style="width:100%; background-color: white;border-radius: 0.5rem;" class="card p-4">
            <div class="card-body">
                <h4 class="card-title" style="margin-left:3%;"> Assign Authority</h4>
                <form class="form-sample needs-validation" action="/Authority/AssignAuthority/@Model.Id" method="post" novalidate>
                    <p class="card-description"> <b>Fields marked as <span class="required">*</span> are required</b> </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-4 col-form-label">Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter First Name" readonly />
                                    <span asp-validation-for="Name" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                      @*  <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name<sup class="required">*</sup></label>
                                <div class="col-sm-8">
                                    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name" readonly/>
                                    <span asp-validation-for="LastName" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>*@
                    </div>
                     <div class="row">
                          <div class="col-md-6">
                             <div class="form-group row">
                                <label asp-for="RepaId" class="col-sm-4 col-form-label">
                                    Reporting Authority<span style="color: Red">&nbsp;*</span>
                                </label>

                                <div asp-for="RepaId" class="col-sm-8">
                                    <select asp-for="RepaId" asp-items="@ViewBag.ReportingList" class="form-control p-3 form-select" required>
                                        <option value="">Select Reporting Authority </option>
                                    </select>
                                    <span asp-validation-for="RepaId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="RevaId" class="col-sm-4 col-form-label">
                                    Reviewing Authority<span style="color: Red">&nbsp;*</span>
                                </label>

                                <div asp-for="RevaId" class="col-sm-8">
                                    <select asp-for="RevaId" asp-items="@ViewBag.ReviewingList" class="form-control p-3 form-select" required>
                                        <option value="">Select Reviewing Authority</option>
                                    </select>
                                    <span asp-validation-for="RevaId" class="text-danger mx-1 small"></span>
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="form-group text-center">
                        @* <input type="hidden" name="job" id="job" />*@
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-2"> <input type="submit" style="width:130px" id="buttonID" value="Save" class="btn btn-block blueTheme btn-md font-weight-medium auth-form-btn" /> </div>
                            <div class="col-2"> <a asp-action="GetAllAuthority" class="btn  btn-block ResetButton btn-md font-weight-medium auth-form-btn">Cancel</a></div>

                            <div class="col-4"></div>
                            @* <input id="submit" type="submit" value="submit" class="btn btn-primary mt-4" />
                            <input type="reset" value="reset" class="btn btn-danger mt-4" />*@
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>


